{
  "name": "Mark as Read Medium Posts",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "webNavigation",
    "scripting",
    "tabs",
    "*://*.medium.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*",
        "https://*.medium.com/*"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*/*"
  ]
}